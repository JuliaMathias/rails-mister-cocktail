<%= render "components/banner" %>
<div class="container mt-5">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="text-secondary">Cocktails</h2>
      <div class="mt-5 d-flex flex-row justify-content-between flex-wrap">
        <% @cocktails.each do |cocktail| %>
          <div class="card-cocktail text-dark mt-2 mb-2 mr-2">
            <h5><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
