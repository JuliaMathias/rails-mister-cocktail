<%= render "components/banner" %>
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="text-secondary">Cocktails</h2>
      <div class="mt-5 d-flex flex-row justify-content-start flex-wrap">
        <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail), class: "text-decoration-none" do %>
            <div class="card-cocktail text-dark mb-2 mr-2" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path cocktail.photo.key %>')">
              <h5 class="text-light"><%= cocktail.name %></h5>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
