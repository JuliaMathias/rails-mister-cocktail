<div class="home-banner">
  <h1 class="display-1">Miss Cocktail</h1>
  <p>Impress your guests with delicious cocktails!</p>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="text-secondary">Cocktails</h2>
      <div class="mt-5 d-flex flex-row justify-content-between flex-wrap">
        <% @cocktails.each do |cocktail| %>
          <div class="card text-dark mt-2 mb-2 mr-2">
            <div class="card-body">
              <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail), class: "text-secondary" %></h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
